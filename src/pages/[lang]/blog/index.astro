---
import Base from '@/layouts/Base.astro';
import { useTranslations, languages, getLocalizedPath, type Lang } from '@/i18n/translations';
import { kayakTeam, mistySunrise } from '@/assets/images';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

// TODO: Replace with Tina CMS data fetching
const posts = [
  {
    slug: 'getting-started-kayak-tours',
    title: lang === 'es' ? 'Cómo empezar con los tours de kayak' : lang === 'ru' ? 'Как начать с каяк-туров' : 'Getting Started with Kayak Tours',
    excerpt: lang === 'es' ? 'Todo lo que necesitas saber antes de tu primera aventura en kayak en el delta del Tigre.' : lang === 'ru' ? 'Все, что вам нужно знать перед вашим первым приключением на каяке в дельте Тигре.' : 'Everything you need to know before your first kayaking adventure in the Tigre delta.',
    date: '2025-02-17',
    image: kayakTeam.src,
    tags: ['Beginners', 'Tips'],
  },
  {
    slug: 'sunrise-on-kayaks',
    title: lang === 'es' ? 'Amanecer en kayaks' : lang === 'ru' ? 'Рассвет на каяках' : 'Sunrise on Kayaks',
    excerpt: lang === 'es' ? 'Los amaneceres mágicos del delta vistos desde el agua. Una experiencia única que solo se vive en kayak.' : lang === 'ru' ? 'Волшебные рассветы дельты с воды. Уникальный опыт, который можно пережить только на каяке.' : 'The magical delta sunrises seen from the water. A unique experience only possible on a kayak.',
    date: '2025-05-20',
    image: mistySunrise.src,
    tags: ['Experience', 'Nature'],
  },
];

const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString(lang === 'es' ? 'es-AR' : lang === 'ru' ? 'ru-RU' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Base title={t('blog.title')} lang={lang}>
  <!-- Header -->
  <section class="pt-24 pb-12 bg-gradient-to-b from-primary-600 to-primary-700">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {t('blog.title')}
      </h1>
      <p class="text-primary-100 max-w-2xl mx-auto">
        {lang === 'es'
          ? 'Consejos, historias y novedades sobre nuestras aventuras en el delta'
          : lang === 'ru'
          ? 'Советы, истории и новости о наших приключениях в дельте'
          : 'Tips, stories, and news about our delta adventures'}
      </p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="group bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow">
              <a href={getLocalizedPath(`/blog/${post.slug}`, lang)} class="block">
                <div class="aspect-[16/9] overflow-hidden">
                  <img
                    src={post.image}
                    alt={post.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                </div>
              </a>
              <div class="p-6">
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.tags.map((tag) => (
                    <span class="px-2 py-1 bg-primary-50 text-primary-600 text-xs font-medium rounded">
                      {tag}
                    </span>
                  ))}
                </div>
                <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                  <a href={getLocalizedPath(`/blog/${post.slug}`, lang)}>
                    {post.title}
                  </a>
                </h2>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {post.excerpt}
                </p>
                <div class="flex items-center justify-between">
                  <time class="text-sm text-gray-500">
                    {formatDate(post.date)}
                  </time>
                  <a
                    href={getLocalizedPath(`/blog/${post.slug}`, lang)}
                    class="text-sm font-medium text-primary-600 hover:text-primary-700"
                  >
                    {t('blog.readMore')} →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500">
            {lang === 'es' ? 'No hay posts aún.' : lang === 'ru' ? 'Пока нет постов.' : 'No posts yet.'}
          </p>
        </div>
      )}
    </div>
  </section>
</Base>
