---
import Base from '@/layouts/Base.astro';
import HeroCarousel from '@/components/HeroCarousel.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import { useTranslations, languages, type Lang } from '@/i18n/translations';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

// TODO: Replace with Tina CMS data fetching
const heroSlides = [
  {
    image: 'https://i.postimg.cc/BQp0FJYK/VideoCapture-20250215-235637.jpg',
    title: lang === 'es' ? 'Explora el Delta del Tigre' : lang === 'ru' ? 'Исследуй дельту Тигре' : 'Explore the Tigre Delta',
    subtitle: lang === 'es' ? 'Aventuras en kayak y SUP para todos los niveles' : lang === 'ru' ? 'Приключения на каяках и SUP для любого уровня' : 'Kayak and SUP adventures for all levels',
  },
  {
    image: 'https://i.postimg.cc/1XdZbykH/VideoCapture-20250215-235643.jpg',
    title: lang === 'es' ? 'Naturaleza Inolvidable' : lang === 'ru' ? 'Незабываемая природа' : 'Unforgettable Nature',
    subtitle: lang === 'es' ? 'Conecta con la naturaleza en el corazón del delta' : lang === 'ru' ? 'Соединись с природой в сердце дельты' : 'Connect with nature in the heart of the delta',
  },
];

// TODO: Replace with Tina CMS data fetching
const services = [
  {
    slug: 'delta-full-day',
    title: lang === 'es' ? 'Experiencia Delta Día Completo' : lang === 'ru' ? 'Дельта: Полный День' : 'Delta Full Day Experience',
    description: lang === 'es' ? 'Una inmersión completa en el delta con kayak, naturaleza y gastronomía local.' : lang === 'ru' ? 'Полное погружение в дельту с каякингом, природой и местной кухней.' : 'A complete immersion in the delta with kayaking, nature, and local cuisine.',
    image: 'https://i.postimg.cc/BQp0FJYK/VideoCapture-20250215-235637.jpg',
    duration: lang === 'es' ? 'Día completo' : lang === 'ru' ? 'Весь день' : 'Full day',
    price: { adult: 150, currency: 'USD' },
  },
  {
    slug: 'mangrove-tour',
    title: lang === 'es' ? 'Tour de Manglares para Principiantes' : lang === 'ru' ? 'Тур по мангровым зарослям для начинающих' : 'Mangrove Tour for Beginners',
    description: lang === 'es' ? 'Perfecto para principiantes, explora los canales tranquilos del delta.' : lang === 'ru' ? 'Идеально для начинающих, исследуйте тихие каналы дельты.' : 'Perfect for beginners, explore the peaceful channels of the delta.',
    image: 'https://i.postimg.cc/1XdZbykH/VideoCapture-20250215-235643.jpg',
    duration: lang === 'es' ? '4 horas' : lang === 'ru' ? '4 часа' : '4 hours',
    price: { adult: 80, currency: 'USD' },
  },
];
---

<Base title={t('nav.home')} lang={lang}>
  <!-- Hero Section -->
  <section class="pt-16">
    <HeroCarousel slides={heroSlides} lang={lang} />
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {t('services.title')}
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          {lang === 'es'
            ? 'Descubre nuestras experiencias únicas en el delta del Tigre'
            : lang === 'ru'
            ? 'Откройте для себя наши уникальные приключения в дельте Тигре'
            : 'Discover our unique experiences in the Tigre delta'}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <ServiceCard {...service} lang={lang} />
        ))}
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            {lang === 'es'
              ? '¿Por qué elegirnos?'
              : lang === 'ru'
              ? 'Почему выбирают нас?'
              : 'Why Choose Us?'}
          </h2>
          <div class="space-y-4">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">
                  {lang === 'es' ? 'Guías Expertos' : lang === 'ru' ? 'Опытные гиды' : 'Expert Guides'}
                </h3>
                <p class="text-gray-600 text-sm">
                  {lang === 'es'
                    ? 'Nuestros guías conocen cada rincón del delta'
                    : lang === 'ru'
                    ? 'Наши гиды знают каждый уголок дельты'
                    : 'Our guides know every corner of the delta'}
                </p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">
                  {lang === 'es' ? 'Horarios Flexibles' : lang === 'ru' ? 'Гибкое расписание' : 'Flexible Schedules'}
                </h3>
                <p class="text-gray-600 text-sm">
                  {lang === 'es'
                    ? 'Adaptamos los tours a tus necesidades'
                    : lang === 'ru'
                    ? 'Мы адаптируем туры под ваши потребности'
                    : 'We adapt tours to your needs'}
                </p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">
                  {lang === 'es' ? 'Equipo Incluido' : lang === 'ru' ? 'Снаряжение включено' : 'Equipment Included'}
                </h3>
                <p class="text-gray-600 text-sm">
                  {lang === 'es'
                    ? 'Todo el equipo necesario está incluido'
                    : lang === 'ru'
                    ? 'Все необходимое снаряжение включено'
                    : 'All necessary equipment is included'}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <img
            src="https://i.postimg.cc/BQp0FJYK/VideoCapture-20250215-235637.jpg"
            alt="Kayaking in Tigre Delta"
            class="rounded-2xl shadow-xl"
          />
          <div class="absolute -bottom-6 -left-6 bg-primary-600 text-white p-6 rounded-xl shadow-lg">
            <p class="text-4xl font-bold">5+</p>
            <p class="text-sm opacity-90">
              {lang === 'es' ? 'Años de experiencia' : lang === 'ru' ? 'Лет опыта' : 'Years of experience'}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        {lang === 'es'
          ? '¿Listo para tu aventura?'
          : lang === 'ru'
          ? 'Готовы к приключению?'
          : 'Ready for Your Adventure?'}
      </h2>
      <p class="text-primary-100 mb-8 max-w-2xl mx-auto">
        {lang === 'es'
          ? 'Contáctanos hoy y reserva tu próxima experiencia en el delta'
          : lang === 'ru'
          ? 'Свяжитесь с нами сегодня и забронируйте свое следующее приключение в дельте'
          : 'Contact us today and book your next delta experience'}
      </p>
      <a
        href="https://wa.me/5491112345678"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 px-8 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t('contact.whatsapp')}
      </a>
    </div>
  </section>
</Base>
