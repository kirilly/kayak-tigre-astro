---
import Base from '@/layouts/Base.astro';
import HeroCarousel from '@/components/HeroCarousel.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import { useTranslations, languages, type Lang } from '@/i18n/translations';
import {
  deltaAerial,
  deltaNature,
  paranaSunrise2,
  paranaSunrise,
  mistySunrise,
  tigreRiver,
  kayakGroup,
} from '@/assets/images';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

// TODO: Replace with Tina CMS data fetching
const heroSlides = [
  {
    image: deltaAerial.src,
    title: lang === 'es' ? 'Explora el Delta del Tigre' : lang === 'ru' ? 'Исследуй дельту Тигре' : 'Explore the Tigre Delta',
    subtitle: lang === 'es' ? 'Aventuras en kayak y SUP para todos los niveles' : lang === 'ru' ? 'Приключения на каяках и SUP для любого уровня' : 'Kayak and SUP adventures for all levels',
  },
  {
    image: deltaNature.src,
    title: lang === 'es' ? 'Naturaleza Inolvidable' : lang === 'ru' ? 'Незабываемая природа' : 'Unforgettable Nature',
    subtitle: lang === 'es' ? 'Conecta con la naturaleza en el corazón del delta' : lang === 'ru' ? 'Соединись с природой в сердце дельты' : 'Connect with nature in the heart of the delta',
  },
  {
    image: paranaSunrise2.src,
    title: lang === 'es' ? 'Aventura en el Paraná' : lang === 'ru' ? 'Приключение на Паране' : 'Paraná Adventure',
    subtitle: lang === 'es' ? 'Descubre el segundo río más grande de Sudamérica' : lang === 'ru' ? 'Открой второй по величине реку Южной Америки' : 'Discover South America\'s second largest river',
  },
];

// TODO: Replace with Tina CMS data fetching
const services = [
  {
    slug: 'delta-full-day',
    title: lang === 'es' ? 'Esperita. Cien Vueltas del Río' : lang === 'ru' ? 'Esperita. Сто поворотов реки' : 'Esperita. Hundred River Turns',
    image: deltaNature.src,
    duration: lang === 'es' ? 'Día completo' : lang === 'ru' ? 'Весь день' : 'Full day',
    price: { adult: 65, child: 50, currency: 'USD' },
    minAge: 4,
    rating: 5,
    reviewCount: 12,
  },
  {
    slug: 'torito-half-day',
    title: lang === 'es' ? 'Torito. Paseo Corto' : lang === 'ru' ? 'Torito. Короткий маршрут' : 'Torito. Short Tour',
    image: mistySunrise.src,
    duration: lang === 'es' ? 'Medio día' : lang === 'ru' ? 'Полдня' : 'Half day',
    price: { adult: 45, child: 35, currency: 'USD' },
    minAge: 4,
    rating: 5,
    reviewCount: 8,
  },
  {
    slug: 'private-tour',
    title: lang === 'es' ? 'Tour Privado' : lang === 'ru' ? 'Индивидуальный тур' : 'Private Tour',
    image: paranaSunrise.src,
    duration: lang === 'es' ? 'Flexible' : lang === 'ru' ? 'Гибкий' : 'Flexible',
    price: { adult: 150, child: 100, currency: 'USD' },
    minAge: 4,
    rating: 5,
    reviewCount: 5,
  },
];
---

<Base title={t('nav.home')} lang={lang}>
  <!-- Hero Section -->
  <section class="pt-16">
    <HeroCarousel slides={heroSlides} lang={lang} />
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {t('services.title')}
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          {lang === 'es'
            ? 'Descubre nuestras experiencias únicas en el delta del Tigre'
            : lang === 'ru'
            ? 'Откройте для себя наши уникальные приключения в дельте Тигре'
            : 'Discover our unique experiences in the Tigre delta'}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <ServiceCard {...service} lang={lang} />
        ))}
      </div>
    </div>
  </section>

  <!-- About Section 1 -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            {lang === 'es'
              ? '¿Por qué elegirnos?'
              : lang === 'ru'
              ? 'Почему выбирают нас?'
              : 'Why Choose Us?'}
          </h2>
          <p class="text-gray-600 mb-6">
            {lang === 'es'
              ? 'Sumérgete en un mundo de exuberante naturaleza salvaje donde la gente vive sobre el agua. Aquí no hay carreteras, solo una red infinita de arroyos y canales.'
              : lang === 'ru'
              ? 'Погрузись в мир буйной дикой природы, где люди живут на воде. Здесь нет дорог, только бесконечная сеть ручьев и каналов.'
              : 'Immerse yourself in a world of lush wild nature where people live on the water. There are no roads here, only an endless network of streams and channels.'}
          </p>
          <div class="space-y-4">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">
                  {lang === 'es' ? 'Guías Expertos' : lang === 'ru' ? 'Опытные гиды' : 'Expert Guides'}
                </h3>
                <p class="text-gray-600 text-sm">
                  {lang === 'es'
                    ? 'Nuestros guías conocen cada rincón del delta'
                    : lang === 'ru'
                    ? 'Наши гиды знают каждый уголок дельты'
                    : 'Our guides know every corner of the delta'}
                </p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">
                  {lang === 'es' ? 'Todo Incluido' : lang === 'ru' ? 'Всё включено' : 'All Inclusive'}
                </h3>
                <p class="text-gray-600 text-sm">
                  {lang === 'es'
                    ? 'Transporte en lancha, desayuno y equipo incluido'
                    : lang === 'ru'
                    ? 'Трансфер на катере, завтрак и снаряжение включены'
                    : 'Boat transfer, breakfast and equipment included'}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <img
            src={tigreRiver.src}
            alt="Tigre River Delta"
            class="rounded-2xl shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section 2 -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="order-2 md:order-1">
          <img
            src={kayakGroup.src}
            alt="Kayak adventure"
            class="rounded-2xl shadow-xl"
          />
        </div>
        <div class="order-1 md:order-2">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            {lang === 'es'
              ? 'Aventura para todos'
              : lang === 'ru'
              ? 'Приключение для всех'
              : 'Adventure for Everyone'}
          </h2>
          <p class="text-gray-600 mb-6">
            {lang === 'es'
              ? 'Desde el muelle central de la ciudad, nos dirigiremos a islas remotas y arroyos forestales tranquilos, lejos del ruido del centro turístico de Tigre.'
              : lang === 'ru'
              ? 'От центральной пристани города мы отправимся к отдалённым островам и тихим лесным протокам, вдали от шума туристического центра Тигре.'
              : 'From the central pier of the city, we\'ll head to remote islands and quiet forest streams, away from the noise of the Tigre tourist center.'}
          </p>
          <p class="text-gray-600 mb-6">
            {lang === 'es'
              ? 'El maršruta es apto para principiantes, no se requiere experiencia previa. Si llevas un estilo de vida activo, te será fácil completar el recorrido.'
              : lang === 'ru'
              ? 'Маршрут подходит для начинающих, опыт не требуется. Если вы ведёте активный образ жизни, вам будет легко пройти маршрут.'
              : 'The route is suitable for beginners, no previous experience required. If you lead an active lifestyle, you\'ll find the route easy to complete.'}
          </p>
          <div class="flex flex-wrap gap-3">
            <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
              {lang === 'es' ? 'Familia' : lang === 'ru' ? 'Семья' : 'Family'}
            </span>
            <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
              {lang === 'es' ? 'Principiantes' : lang === 'ru' ? 'Начинающие' : 'Beginners'}
            </span>
            <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
              {lang === 'es' ? 'Aventura' : lang === 'ru' ? 'Приключения' : 'Adventure'}
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        {lang === 'es'
          ? '¿Listo para tu aventura?'
          : lang === 'ru'
          ? 'Готовы к приключению?'
          : 'Ready for Your Adventure?'}
      </h2>
      <p class="text-primary-100 mb-8 max-w-2xl mx-auto">
        {lang === 'es'
          ? 'Contáctanos hoy y reserva tu próxima experiencia en el delta'
          : lang === 'ru'
          ? 'Свяжитесь с нами сегодня и забронируйте свое следующее приключение в дельте'
          : 'Contact us today and book your next delta experience'}
      </p>
      <a
        href="https://wa.me/5491112345678"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 px-8 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {t('contact.whatsapp')}
      </a>
    </div>
  </section>
</Base>
