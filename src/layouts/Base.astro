---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import type { Lang } from '@/i18n/translations';
import { deltaAerial } from '@/assets/images';

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
  image?: string;
}

const {
  title,
  description = 'Explore the delta of Tigre with kayak and SUP tours',
  lang = 'en',
  image = deltaAerial.src
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const baseUrl = import.meta.env.BASE_URL || '/';
const faviconPath = baseUrl.endsWith('/') ? `${baseUrl}favicon.svg` : `${baseUrl}/favicon.svg`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={faviconPath} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | Kayak Tigre</title>
    <meta name="title" content={`${title} | Kayak Tigre`} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Kayak Tigre`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content={lang} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Kayak Tigre`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <Header lang={lang} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer lang={lang} />

    <!-- Instagram Embed Script -->
    <script async src="//www.instagram.com/embed.js"></script>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
