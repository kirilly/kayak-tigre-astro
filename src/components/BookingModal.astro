}

const { lang } = Astro.props;
const t = useTranslations(lang);

const WHATSAPP_NUMBER = '5491112345678';

const tours = [
  {
    slug: 'delta-full-day',
    title: {
      en: 'Esperita. Hundred River Turns',
      es: 'Esperita. Cien Vueltas del Río',
      ru: 'Esperita. Сто поворотов реки',
    },
    duration: {
      en: 'Full day',
      es: 'Día completo',
      ru: 'Весь день',
    },
    price: 65,
    image: deltaAerial.src,
  },
  {
    slug: 'torito-half-day',
    title: {
      en: 'Torito. Short Tour',
      es: 'Torito. Paseo Corto',
      ru: 'Torito. Короткий маршрут',
    },
    duration: {
      en: 'Half day',
      es: 'Medio día',
      ru: 'Полдня',
    },
    price: 45,
    image: mistySunrise.src,
  },
  {
    slug: 'private-tour',
    title: {
      en: 'Private Tour',
      es: 'Tour Privado',
      ru: 'Индивидуальный тур',
    },
    duration: {
      en: 'Flexible',
      es: 'Flexible',
      ru: 'Гибкий',
    },
    price: 150,
    image: paranaSunrise.src,
  },
];

const modalTitle = {
  en: 'Choose Your Adventure',
  es: 'Elegí tu aventura',
  ru: 'Выберите приключение',
};

const contactVia = {
  en: 'Contact via WhatsApp',
  es: 'Contactar por WhatsApp',
  ru: 'Связаться через WhatsApp',
};

const viewDetails = {
  en: 'View details',
  es: 'Ver detalles',
  ru: 'Подробнее',
};

const fromPrice = {
  en: 'From',
  es: 'Desde',
  ru: 'От',
};

const perPerson = {
  en: '/person',
  es: '/persona',
  ru: '/чел.',
};

const closeText = {
  en: 'Close',
  es: 'Cerrar',
  ru: 'Закрыть',
};

function getWhatsAppUrl(tourTitle: string) {
  const messages = {
    en: `Hi! I'm interested in the tour "${tourTitle}". Could you give me more information?`,
    es: `Hola! Me interesa el tour "${tourTitle}". ¿Me podrías dar más información?`,
    ru: `Привет! Меня интересует тур "${tourTitle}". Можете рассказать подробнее?`,
  };
  return `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(messages[lang])}`;
}
---

<div id="booking-modal" class="fixed inset-0 z-[100] hidden" aria-modal="true" role="dialog">
  <!-- Backdrop -->
  <div class="modal-backdrop absolute inset-0 bg-black/60 backdrop-blur-sm" aria-hidden="true"></div>

  <!-- Modal Content -->
  <div class="relative flex min-h-full items-center justify-center p-4">
    <div class="modal-content relative w-full max-w-2xl bg-white rounded-2xl shadow-2xl overflow-hidden transform scale-95 opacity-0 transition-all duration-300">
      <!-- Header -->
      <div class="bg-gradient-to-r from-primary-600 to-primary-700 px-6 py-4">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-bold text-white">{modalTitle[lang]}</h2>
          <button
            id="modal-close-btn"
            class="p-1 text-white/80 hover:text-white transition-colors"
            aria-label={closeText[lang]}
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Tours Grid -->
      <div class="p-6">
        <div class="grid gap-4">
          {tours.map((tour) => (
            <div class="flex gap-4 p-3 rounded-xl border border-gray-200 hover:border-primary-300 hover:shadow-md transition-all group">
              <!-- Image -->
              <div class="w-24 h-24 flex-shrink-0 rounded-lg overflow-hidden">
                <img
                  src={tour.image}
                  alt={tour.title[lang]}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <!-- Info -->
              <div class="flex-grow min-w-0">
                <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors truncate">
                  {tour.title[lang]}
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                  {tour.duration[lang]}
                </p>
                <p class="text-sm font-medium text-primary-600 mt-1">
                  {fromPrice[lang]} ${tour.price}{perPerson[lang]}
                </p>
              </div>

              <!-- Actions -->
              <div class="flex flex-col gap-2 flex-shrink-0">
                <a
                  href={getWhatsAppUrl(tour.title[lang])}
                  target="_blank"
                  rel="noopener"
                  class="flex items-center gap-1.5 px-3 py-2 bg-green-500 text-white text-xs font-medium rounded-lg hover:bg-green-600 transition-colors whitespace-nowrap"
                >
