---
import { useTranslations, getLocalizedPath, type Lang } from '@/i18n/translations';

interface Props {
  slug: string;
  title: string;
  description?: string;
  image?: string;
  duration?: string;
  price?: {
    adult?: number;
    child?: number;
    currency?: string;
  };
  minAge?: number;
  rating?: number;
  reviewCount?: number;
  lang: Lang;
}

const { slug, title, description, image, duration, price, minAge, rating = 5, reviewCount = 0, lang } = Astro.props;
const t = useTranslations(lang);

const formatPrice = (amount: number) => `$${amount}`;
---

<article class="group bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <a href={getLocalizedPath(`/services/${slug}`, lang)} class="block relative aspect-[4/3] overflow-hidden">
    {image ? (
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
        <svg class="w-16 h-16 text-white/50" viewBox="0 0 24 24" fill="currentColor">
          <path d="M3 17h18v2H3v-2zm0-7h18v5H3v-5zm15-4c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v2h12V6z"/>
        </svg>
      </div>
    )}
  </a>

  <div class="p-4">
    <h3 class="text-base font-bold text-gray-800 mb-3 line-clamp-2 min-h-[3rem] group-hover:text-primary-600 transition-colors">
      <a href={getLocalizedPath(`/services/${slug}`, lang)}>
        {title}
      </a>
    </h3>

    {duration && (
      <div class="flex items-center gap-2 text-sm text-red-600 mb-3">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10" />
        </svg>
        <span class="font-medium">{duration}</span>
      </div>
    )}

    <div class="grid grid-cols-3 gap-2 text-xs text-gray-600 mb-3 border-t border-gray-100 pt-3">
      {price?.adult && (
        <div class="flex flex-col items-center">
          <svg class="w-4 h-4 mb-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="text-gray-500">{lang === 'es' ? 'Adulto' : lang === 'ru' ? 'Взрос.' : 'Adult'}</span>
          <span class="font-bold text-gray-800">{formatPrice(price.adult)}</span>
        </div>
      )}
      {price?.child && (
        <div class="flex flex-col items-center">
          <svg class="w-4 h-4 mb-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <span class="text-gray-500">{lang === 'es' ? 'Niño' : lang === 'ru' ? 'Дети' : 'Child'}</span>
          <span class="font-bold text-gray-800">{formatPrice(price.child)}</span>
        </div>
      )}
      {minAge && (
        <div class="flex flex-col items-center">
          <svg class="w-4 h-4 mb-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="text-gray-500">{lang === 'es' ? 'Edad mín.' : lang === 'ru' ? 'Мин. возр.' : 'Min. Age'}</span>
          <span class="font-bold text-gray-800">{minAge} {lang === 'es' ? 'años' : lang === 'ru' ? 'лет' : 'years'}</span>
        </div>
      )}
    </div>

    <div class="flex items-center gap-1">
      {[...Array(5)].map((_, i) => (
        <svg class={`w-4 h-4 ${i < rating ? 'text-yellow-400' : 'text-gray-200'}`} fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
      {reviewCount > 0 && (
        <span class="text-xs text-gray-500 ml-1">({reviewCount})</span>
      )}
    </div>
  </div>
</article>
